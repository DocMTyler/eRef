@model IEnumerable<eRef.Models.VoterModels.VoterListItem>
@{
    ViewBag.Title = "Voter Information";
}

<h2 style="text-align:center;font-family:Impact">Voters</h2>

<p style="text-align:center">
    @Html.ActionLink("Register as a new voter on eRef!", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table" style="text-align:center">
    <tr>
        <th style="color:dodgerblue">
            @Html.DisplayNameFor(model => model.VoterID)
        </th>
        <th style="color:red">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="color:dodgerblue">
            @Html.DisplayNameFor(model => model.PartyAff)
        </th>
        <th style="color:red">
            @Html.DisplayNameFor(model => model.LegislatorID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VoterID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyAff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LegislatorID)
            </td>
            <td>
                @Html.ActionLink("Update my Voter Info", "Edit", new { id = item.ID }) <br />
                @Html.ActionLink("My Info", "Details", new { id = item.ID }) <br />
                @Html.ActionLink("Delete me!", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
