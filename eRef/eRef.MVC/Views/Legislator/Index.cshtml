@model IEnumerable<eRef.Models.LegislatorModels.LegislatorListItem>

@{
    ViewBag.Title = "Legislators";
}

<h2 style="text-align:center;font-family:Impact">Legislators</h2>

<p style="text-align:center;color:red">
    @Html.ActionLink("Register as a Legislator on eRef!", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table" style="text-align:center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.District)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.ActionLink("Update my Info", "Edit", new { id = item.ID }) |<br />
                @Html.ActionLink("My Info", "Details", new { id = item.ID }) |<br />
                @Html.ActionLink("I got booted! Delete me!", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
